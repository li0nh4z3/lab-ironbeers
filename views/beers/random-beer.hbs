<h1>Random Beer</h1>
<section>
{{#each beers}}
  <div class="beer">
    <div class="beer-inner">
      <h3 class="mt-0">
        <a href="/beers/{{this.id}}">
          {{this.name}}
        </a>
      </h3>

      <h5>{{this.tagline}}</h5>
      <p>{{this.description}}</p>
    </div>
    {{#if this.image_url}}
      <img src="{{ this.image_url }}" alt="{{ this.tagline }}" class="align-self-center mr-3" />
    {{/if}}
  </div>
{{/each}}

<div class="buttons">
  <a class="btn btn-primary button-margin" href="/random-beer">Choose another random beer </a>
</div>



    </div>
</section>